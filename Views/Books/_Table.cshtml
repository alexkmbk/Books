@model IEnumerable<Books.Models.Book>

<a id="books_table_input" href="#books_table"></a>

@if (Model.Count() == 0)
{
    <table id="books_table" class="table table-striped table-bordered table-condensed EmptyTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Publisher</th>
                <th>PublishedAt</th>
                <th>Authors</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
}
else {
    <table id="books_table" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Publisher</th>
                <th>PublishedAt</th>
                <th>Authors</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
                {
                <tr>

                    <td style="display:none;">@e.Id</td>
                    <td style="display:none;">@e.publisher.Id</td>
                    <td>@e.Name</td>
                    <td>@e.Description</td>
                    <td>@e.Price</td>
                    <td>@e.publisher.Name</td>
                    <td>@e.PublishedAt</td>
                    <td>@string.Join(", ", @e.Authors.Select(x => x.Name))</td>
                </tr>
            }
        </tbody>
    </table>
}
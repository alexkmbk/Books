@model IEnumerable<Books.Models.Book>

@*Диалог выбора книг*@
<div id="dialog_books_choiceform" title="Books choice" style="display:none;">

    <h1>@ViewBag.Title</h1>

    <div id="books_choicetable_div">
        <a id="books_choicetable_input" href="#books_choicetable"></a>

        @if (Model.Count() == 0)
        {
            <div>Нет данных для отображения</div>
        }
        else {
            <table id="books_choicetable" class="table table-striped table-bordered table-condensed scroll">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Authors</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                {
                        <tr>
                            <td style="display:none;">@e.Id</td>
                            <td>@e.Name</td>
                            <td>@string.Join(",", @e.Authors.Select(x=>x.Name))</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div name="dialog_buttons_panel">
        <input name="Choice" type="button" value="Выбрать" class="btn btn-default" />
    </div>
</div>
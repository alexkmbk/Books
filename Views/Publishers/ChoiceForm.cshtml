@model IEnumerable<Books.Models.Publisher>

<h1>@ViewBag.Title</h1>

@*Диалог выбора издателей*@
<div id="dialog_publishers_choiceform" title="Publishers choice" style="display:none;">
    <div id="publishers_table_div">
        <a id="publishers_table_input" href="#publishers_table"></a>

        @if (Model.Count() == 0)
        {
            <div>Нет данных для отображения</div>
        }
        else {
            <table id="publishers_table" class="table table-striped table-bordered table-condensed scroll">
                <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                {
                        <tr>
                            <td style="display:none;">@e.Id</td>
                            <td>@e.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div id="publishers_panel">
        <input name="Choice" type="button" value="Выбрать" class="btn btn-default" />
    </div>
</div>